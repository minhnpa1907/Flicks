<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cover_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/backdrop" />

        <ImageButton
            android:layout_width="@dimen/btn_play_size"
            android:layout_height="@dimen/btn_play_size"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_play" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_margin_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_medium"
            android:textStyle="bold"
            tools:text="Nguyen Pham Anh Minh" />

        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_margin_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_small"
            tools:text="Nguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham AnhNguyen Pham Anh Minh Minh" />
    </LinearLayout>
</LinearLayout>