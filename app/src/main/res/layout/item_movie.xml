<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_height"
        android:layout_weight="0.7"
        android:scaleType="fitStart"
        tools:src="@drawable/poster" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_margin_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_medium"
            android:textStyle="bold"
            tools:text="Nguyen Pham Anh Minh" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_margin_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_small"
            tools:text="Nguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham Anh MinhNguyen Pham AnhNguyen Pham Anh Minh Minh" />
    </LinearLayout>
</LinearLayout>